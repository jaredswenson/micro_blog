<div id="accountBox">
	<div id="accountForm">
			<div>
				<h1><%= @user.fname + " " + @user.lname%></h1>
			</div>
			<div>
				<h1><%= @user.email %></h1>
			</div>
				<form action="/edit_account" method="POST">
					<div id="postbuttons"> 
						<input class="button" type="submit" value="Edit Account">
					</div>
				</form>
				
				<form action="/delete_accont" method="POST">
				<div id="postbuttons"> 
					<input class="button" type="submit" value="Delete Account">
				</div>			
			</form>
	</div>
</div>
